<?xml version="1.0" encoding="UTF-8"?>
<mapping-configuration>
	<table name="BASE_ORG" createMode="create" strict="true">
		<columns>
			<column name="ID" property="id" dataType="number" length="10" />
			<column name="PARENT_ID" property="parentId" dataType="number" length="10" />
			<column name="TYPE" property="type" dataType="number" length="1" nullable="false"/>
			<column name="CODE" property="code" dataType="string" length="50" nullable="false"/>
			<column name="NAME" property="name" dataType="nstring" length="100" nullable="false"/>
			<column name="DESCRIPTION" property="description" dataType="nstring" length="200"/>
			<column name="PROJECT_CODE" property="projectCode" dataType="string" length="50" />
			<column name="TENANT_ID" property="tenantId" dataType="char" length="36" nullable="false"/>
		</columns>
		
		<constraints>
			<constraint type="PRIMARY_KEY" isAutoIncrement="true">
				<column name="ID" />
			</constraint>
		</constraints>
	</table>
</mapping-configuration>