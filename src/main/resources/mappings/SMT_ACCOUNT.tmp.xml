<?xml version="1.0" encoding="UTF-8"?>
<mapping-configuration>
	<table name="SMT_ACCOUNT" createMode="create" strict="true">
		<columns>
			<column name="ID" property="id" dataType="char" length="36" />
			<column name="LOGIN_NAME" property="loginName" dataType="string" length="50" nullable="false"/>
			<column name="LOGIN_PWD" property="loginPwd" dataType="string" length="50" nullable="false"/>
			<column name="LOGIN_KEY" property="loginKey" dataType="char" length="36" nullable="false"/>
			<column name="STATE" property="state" dataType="number" length="1" nullable="false"/>
			<column name="EXPIRY_DATE" property="expiryDate" dataType="datetime"/>
			<column name="REMARK" property="remark" dataType="nstring" length="100" />
			<column name="USER_ID" property="userId" dataType="char" length="36" nullable="false"/>
			<column name="OPEN_USER_ID" property="openUserId" dataType="char" length="36" nullable="false"/>
			<column name="OPEN_DATE" property="openDate" dataType="datetime" nullable="false"/>
		</columns>
		
		<constraints>
			<constraint type="PRIMARY_KEY">
				<column name="ID" />
			</constraint>
		</constraints>
	</table>
</mapping-configuration>